<div class="container">
  <div class="row">
    <%= form_tag('/stores/search', method: :get) do %>
      <div class="col s12 m6 offset-m3">
        <input placeholder="店名で検索" type="text" class="validate" name="keyword" autofocus="true"><button  class="waves-effect waves-light btn"><i class="material-icons">search</i></button>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <h6>検索結果</h6>
    </div>
  </div>
  <div class="row">
    <% @stores.each do |store| %>
    <div class="col s12 m6 offset-m3">
      <div class="card blue darken-3">
        <div class="card-content white-text">
          <h4>店名</h4>
          <span class="card-title"><%= store.store_name %></span>
          <h6>使用できるクレジットカード</h6>
          <p><%= store.c_card %></p>
          <h6>使用できる電子マネー</h6>
          <p><%= store.e_money %></p>
          <h6>投稿者 : <%= store.user.nickname %></h6>
        </div>
        <% if user_signed_in? %>
        <div class="card-action">
          <%= link_to '編集', "/stores/#{store.id}/edit", method: :get, class: "waves-effect waves-light btn" %>
          <%= link_to '削除', "/stores/#{store.id}", method: :delete, class: "waves-effect waves-light btn" %>
        </div>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
